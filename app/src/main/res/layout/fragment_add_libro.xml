<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/PreviewLibro"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="20dp"
    tools:context=".ui.libro.AddLibroFragment">

    <EditText
        android:id="@+id/et_nombre"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="@string/add_nombre_libro"
        android:inputType="textPersonName" />

    <EditText
        android:id="@+id/et_unidades"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="@string/add_unidades_libro"
        android:inputType="number" />

    <EditText
        android:id="@+id/et_autor"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="@string/add_autor_libro"
        android:inputType="textPersonName" />

    <Button
        android:id="@+id/btn_agregar_libro"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/add_agregar_libro" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/PreviewLibros_Add"
            android:layout_width="match_parent"
            android:layout_height="261dp"
            android:src="@drawable/ic_add_libro" />

        <Button
            android:id="@+id/btn_subir_Portada"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Subir Imagen" />

        <Button
            android:id="@+id/btn_Escoger_Libro"
            android:layout_width="match_parent"
            android:layout_height="61dp"
            android:text="Escoger Imagen" />
    </LinearLayout>
</LinearLayout>